{
  "name": "threat-feed-bot",
  "version": "1.0.0",
  "description": "Automated threat intelligence feed collector that posts to Microsoft Teams",
  "type": "module",
  "main": "fetch-and-post.js",
  "scripts": {
    "start": "node fetch-and-post.js",
    "start:enhanced": "node fetch-and-post-enhanced.js",
    "dry-run": "node fetch-and-post-enhanced.js --dry-run",
    "dry-run:save": "LOG_TO_FILE=true node fetch-and-post-enhanced.js --dry-run",
    "dry-run:html": "ENABLE_GITHUB_PAGES=true node fetch-and-post-enhanced.js --dry-run",
    "generate-html": "ENABLE_GITHUB_PAGES=true node fetch-and-post-enhanced.js",
    "validate": "node fetch-and-post-enhanced.js --validate",
    "validate-config": "node scripts/validate-config.js",
    "help": "node fetch-and-post-enhanced.js --help",
    "test": "node tests/index.js",
    "test:live": "node tests/index.js --live-teams",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:threatfilter": "jest tests/threatFilter.test.js",
    "test:statemanager": "jest tests/stateManager.test.js",
    "test:parsers": "cd tests && npm run test:parsers",
    "test:validator": "cd tests && npm run test:validator",
    "test:formatter": "cd tests && npm run test:formatter",
    "test:integration": "cd tests && npm run test:integration",
    "test:outputs": "cd tests && npm run test:outputs",
    "html": "node -e \"import('./outputs/githubPages-enhanced.js').then(m => new m.GitHubPagesOutput().generateFeed([]))\"",
    "health": "node -e \"import('./utils/healthMonitor.js').then(m => new m.HealthMonitor().getHealthReport().then(r => console.log(JSON.stringify(r, null, 2))))\"",
    "status": "node -e \"import('./utils/healthMonitor.js').then(m => console.log(new m.HealthMonitor().generateStatusMessage().summary))\"",
    "cleanup": "node -e \"import('./utils/stateManager.js').then(m => new m.StateManager().forceCleanupLocks())\"",
    "backup-state": "node -e \"import('./utils/stateManager.js').then(m => new m.StateManager().createBackup())\"",
    "stats": "node -e \"import('./utils/stateManager.js').then(m => new m.StateManager().getStats().then(s => console.log(JSON.stringify(s, null, 2))))\"",
    "feeds": "cat data/feeds.json | jq '.[] | {name: .name, enabled: .enabled, url: .url}'",
    "feeds:enabled": "cat data/feeds.json | jq '.[] | select(.enabled != false) | {name: .name, url: .url}'"
  },
  "keywords": [
    "threat-intelligence",
    "rss",
    "microsoft-teams",
    "automation",
    "security"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "rss-parser": "^3.13.0",
    "node-fetch": "^3.3.2"
  }
}
