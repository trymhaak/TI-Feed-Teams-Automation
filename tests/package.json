{
  "name": "threat-feed-bot-tests",
  "version": "1.0.0",
  "description": "Test configuration for Jest",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:parsers": "NODE_OPTIONS=--experimental-vm-modules jest parsers.test.js",
    "test:validator": "NODE_OPTIONS=--experimental-vm-modules jest validator.test.js",
    "test:formatter": "NODE_OPTIONS=--experimental-vm-modules jest formatter.test.js",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest fetch-and-post.test.js post-to-teams.test.js"
  },
  "jest": {
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../*.js",
      "!../node_modules/**"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "transform": {}
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "jest": "^30.0.5"
  }
}
